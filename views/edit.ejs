   <div class="main">
      <div class="container">
          <div class="signup-content">
              <div class="signup-img">
                  <img alt="image" src="/images/donor.gif">
              </div>
              <div class="signup-form">
                  <form action="/gallery/update" method="post" enctype="multipart/form-data" class="register-form" id="register-form">
                      <h2>Edit Inventory Details</h2>
                        <input type="hidden" id="unique_ID" name="unique_ID" value='<%= gallery.id %>'>
                        <div class="form-group">
                            <label for="dname">Donor Name</label>
                            <input type="text" id="dname" name="dname"  value="<%= gallery.dname %>" required/>
                        </div>
                        <div class="form-group">
                            <label for="address">Address :</label>
                            <input type="text" id="address" name="address" value="<%= gallery.address %>" required/>
                        </div>
                        <div class="form-group">
                            <label for="quantity">Quantity :</label>
                            <input type="number" id="quantity" name="quantity"  value="<%= gallery.quantity %>" required/>
                        </div>
                        <div class="form-group">
                            <label for="time">Date :</label>
                            <input type="date" id="time" name="time" value="<%= gallery.time %>" required/>
                        </div>
                        
                      <div class="form-row">
                          <div class="form-group">
                              <label for="start_time">Start Time :</label>
                              <input type="time" id="start_time" name="start_time"  value="<%= gallery.start_time %>" required/>
                          </div>
                          <div class="form-group">
                              <label for="end_time">End Time :</label>
                              <input type="time" id="end_time" name="end_time"  value="<%= gallery.end_time %>" required/>
                          </div>
                      </div>
                      <div class="form-submit">
                          
                          <input type="submit" value="Submit Form" class="btn btn-info dropdown-toggle" name="submit" id="submit" />
                      </div>
                  </form>
              </div>
          </div>
      </div>

  </div>

  <script>
      var today = new Date().toISOString().split('T')[0];
      document.getElementsByName("time")[0].setAttribute('min', today);
  </script>

<footer id="footer" class="footer">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <br><h5>Subscribe to Donor+ for weekly donations!</h5>
      </div>
      <div class="col-sm-4">
        <form class="form-inline">
          <br><br><br>
          <input class="form-control mr-sm-2" id="email" type="email" placeholder="Enter Email" required>
          <button onclick="subscribe()" class="btn btn-info my-2 my-sm-0" type="submit">Subscribe</button>
        </form>
      </div>
    </div>
</div>
</footer>

